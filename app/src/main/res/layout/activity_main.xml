<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Table Headers -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </TableLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="299dp"
            android:background="@android:color/white"
            android:elevation="4dp"
            android:padding="8dp"
            android:stretchColumns="1,2">

            <TableRow>

                <TextView
                    android:background="#4CAF50"
                    android:padding="8dp"
                    android:text="ITEM"
                    android:textStyle="bold" />

                <TextView
                    android:background="#4CAF50"
                    android:padding="8dp"
                    android:text="QNTY"
                    android:textStyle="bold" />

                <TextView
                    android:background="#4CAF50"
                    android:padding="8dp"
                    android:text="TOTAL"
                    android:textStyle="bold" />
            </TableRow>

            <!-- Item Rows -->
            <TableRow>

                <Button
                    android:id="@+id/btnBread"
                    android:backgroundTint="#90CAF9"
                    android:padding="8dp"
                    android:text="BREAD"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/qntyBread"
                    android:padding="8dp"
                    android:text="0" />

                <TextView
                    android:id="@+id/totalBread"
                    android:padding="8dp"
                    android:text="0" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btnMilk"
                    android:backgroundTint="#90CAF9"
                    android:padding="8dp"
                    android:text="MILK"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/qntyMilk"
                    android:padding="8dp"
                    android:text="0" />

                <TextView
                    android:id="@+id/totalMilk"
                    android:padding="8dp"
                    android:text="0" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btnSugar"
                    android:backgroundTint="#90CAF9"
                    android:padding="8dp"
                    android:text="SUGAR"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/qntySugar"
                    android:padding="8dp"
                    android:text="0" />

                <TextView
                    android:id="@+id/totalSugar"
                    android:padding="8dp"
                    android:text="0" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btnTissue"
                    android:backgroundTint="#90CAF9"
                    android:padding="8dp"
                    android:text="TISSUE"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/qntyTissue"
                    android:padding="8dp"
                    android:text="0" />

                <TextView
                    android:id="@+id/totalTissue"
                    android:padding="8dp"
                    android:text="0" />
            </TableRow>

            <!-- Grand Total -->
            <TableRow>

                <TextView
                    android:padding="8dp"
                    android:text="GRAND TOTAL"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/grandTotal"
                    android:padding="8dp"
                    android:text="0"
                    android:textColor="@color/black"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>

        <!-- RESET Button -->

        <!-- POS SYSTEM SECTION -->

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:backgroundTint="#FF5252"
            android:padding="12dp"
            android:text="RESET"
            android:textColor="@android:color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Point of System"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,2,3"
            android:background="@android:color/white"
            android:padding="8dp"
            android:elevation="2dp">

            <TableRow>

                <TextView
                    android:background="#4CAF50"
                    android:text="Item"
                    android:textStyle="bold" />

                <TextView
                    android:background="#4CAF50"
                    android:text="Unit Price"
                    android:textStyle="bold" />

                <TextView
                    android:background="#4CAF50"
                    android:text="Quantity"
                    android:textStyle="bold" />

                <TextView
                    android:background="#4CAF50"
                    android:text="Total"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btnPosBread"
                    android:text="BREAD"
                    android:backgroundTint="#64B5F6"
                    android:textColor="@android:color/white" />
                <EditText
                    android:id="@+id/unitBread"
                    android:hint="0"
                    android:inputType="numberDecimal" />
                <EditText
                    android:id="@+id/qtyBread"
                    android:hint="0"
                    android:inputType="number" />
                <TextView
                    android:id="@+id/totalBreadPos"
                    android:text="0" />
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btnPosPen"
                    android:text="PEN"
                    android:backgroundTint="#64B5F6"
                    android:textColor="@android:color/white" />
                <EditText
                    android:id="@+id/unitPen"
                    android:hint="0"
                    android:inputType="numberDecimal" />
                <EditText
                    android:id="@+id/qtyPen"
                    android:hint="0"
                    android:inputType="number" />
                <TextView
                    android:id="@+id/totalPenPos"
                    android:text="0" />
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btnPosWatch"
                    android:text="WATCH"
                    android:backgroundTint="#64B5F6"
                    android:textColor="@android:color/white" />
                <EditText
                    android:id="@+id/unitWatch"
                    android:hint="0"
                    android:inputType="numberDecimal" />
                <EditText
                    android:id="@+id/qtyWatch"
                    android:hint="0"
                    android:inputType="number" />
                <TextView
                    android:id="@+id/totalWatchPos"
                    android:text="0" />
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btnPosMilk"
                    android:text="MILK"
                    android:backgroundTint="#64B5F6"
                    android:textColor="@android:color/white" />
                <EditText
                    android:id="@+id/unitMilk"
                    android:hint="0"
                    android:inputType="numberDecimal" />
                <EditText
                    android:id="@+id/qtyMilk"
                    android:hint="0"
                    android:inputType="number" />
                <TextView
                    android:id="@+id/totalMilkPos"
                    android:text="0" />
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btnGrandTotal"
                    android:text="GRAND TOTAL"
                    android:backgroundTint="#1E88E5"
                    android:textColor="@android:color/white" />
                <TextView
                    android:id="@+id/posGrandTotal"
                    android:text="0"
                    android:layout_span="3" />
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btnDiscount"
                    android:text="DISCOUNT 15%"
                    android:backgroundTint="#43A047"
                    android:textColor="@android:color/white" />
                <TextView
                    android:id="@+id/discountValue"
                    android:text="0"
                    android:layout_span="3" />
            </TableRow>

            <TableRow>
                <Button
                    android:id="@+id/btnNetPay"
                    android:text="NET PAY"
                    android:backgroundTint="#6A1B9A"
                    android:textColor="@android:color/white" />
                <TextView
                    android:id="@+id/netPayValue"
                    android:text="0"
                    android:layout_span="3" />
            </TableRow>
        </TableLayout>
    </LinearLayout>
</ScrollView>
